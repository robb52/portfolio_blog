<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <header>
    <p class="date"><%= @project.created_at.strftime('%A, %b %d') %></p>
    <h1><%= @project.title %></h1>
    <hr>
  </header>

  <div id="content">
    <%= markdown @project.description %>

    <div class="button_wrapper">
      <a href="<%= @project.link %>" class="project_button" target="blank">Vist <%= @project.title %></a>
    </div>

  </div> 

  <%= link_to "Edit", edit_project_path(@project), class: "project" %> 
  <%= link_to "Delete", project_path(@project), method: :delete, data: 
                      { confirm: "Are you want to delete this?" }, class: "project" %>
 
  <hr>

</div>